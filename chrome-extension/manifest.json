{
  "manifest_version": 2,

  "name": "Wrist Control",
  "description": "Your pebble is now a remote control for any web page.",
  "version": "1.0",

  "icons": { "16" : "images/icon.png",
      "48" : "images/48.png",
      "128" : "images/128.png"},

  "browser_action": {
      "homepage_url": "INSERTWEBPAGEHERE.COM",
      "default_title": "Wrist Control"
  },

  "content_scripts": [
    {
      "matches": ["http://*/*", "https://*/*"],
      "run_at": "document_end",
      "css": ["fonts.css", "style.css"],
      "js": ["tools/jquery.js", "tools/firebase.js", "pebble-actions.js"]
    }
  ],

  "background": {
      "scripts": ["pebble-controls.js"]
  },

  "permissions": [
     "activeTab"
  ]
}
